{{#each books}}
<div class="row">
  <div class="col-md-offset-2" "col-md-6" "book-display">
    <img class="book-cover" src="{{this.cover_url}}" alt="cover_url"/>
    <div class="col-md-4">
      <h3>{{this.title}}</h3>
      <p>{{this.genre}}</p>
      <h5>{{this.description}}</h5>
      <a class="btn btn-default" href="">Edit</a>
      <a class="btn btn-default" href="/{{this.id}}/delete">Delete</a>
    </div>
  </div>
</div>
{{/each}}

<div class="row">
    <div class="col-md-offset-4 col-md-6">
      <a class="btn btn-default add-book-button" href="/add">Add a Book</a>
    </div>
</div>
