{{#each books}}
<div class="row">
  <div class="col-md-offset-2 col-md-2">
    <img class="book-cover" src="{{this.cover_url}}" alt="cover_url"/>
  </div>
  <div class="col-md-4">
    <h3>{{this.title}}</h3>
    <p>{{this.genre}}</p>
    <h5>{{this.description}}</h5>
    <a class="btn btn-default" href="/{{this.id}}/editbook">Edit</a>
    <a class="btn btn-default" href="/{{this.id}}/deletebook">Delete</a>
  </div>
</div>
{{/each}}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
      <a class="btn btn-default add-book-button" href="/addbook">Add a Book</a>
    </div>
</div>
