<div class="row">
  <div class="col-md-offset-1 col-md-5 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/books">  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books</a>
  </div>
  <div class="col-md-6 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/authors"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Authors</a>
  </div>
</div>
{{#each books}}
<div class="row">
  <div class="col-md-offset-2 col-md-2">
    <img class="book-cover" src="{{this.cover_url}}" alt="cover_url"/>
  </div>
  <div class="col-md-4">
    <a href="/books/{{this.book_id}}">{{this.title}}</a>
    <br>
    <a href="/authors/{{this.author_id}}">{{first_name}} {{last_name}}</a>
    <p>{{this.genre}}</p>
    <h5>{{this.description}}</h5>
    <a class="btn btn-default" href="/{{this.book_id}}/editbook"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit</a>
    <a class="btn btn-default" href="/{{this.book_id}}/deletebook"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Delete</a>
  </div>
</div>
{{/each}}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
      <a class="btn btn-primary add-book-button" href="/addbook">Add a Book</a>
    </div>
</div>
