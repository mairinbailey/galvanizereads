<div class="row">
  <div class="col-md-offset-1 col-md-5 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/books">  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books</a>
  </div>
  <div class="col-md-6 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/authors"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Authors</a>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-4 col-md-10 col-xs-12">
    <form action="/{{author.id}}/editauthor" method="post">
      <h1>Edit an Author</h1>

      <label for="first_name">First Name</label>
      <div class="form-group">
        <input id="first_name" type="text" name="first_name" value={{author.first_name}}>
      </div>

      <label for="last_name">Last Name</label>
      <div class="form-group">
        <input id="last_name" type="text" name="last_name" value={{author.last_name}}>
      </div>

      <label for="biography">Biography</label>
      <div class="form-group">
        <textarea id= "biography" name="biography" rows="8" cols="40">{{author.biography}}</textarea>
      </div>

      <label for="portrait_url">Portrait URL</label>
      <div class="form-group">
        <input id="portrait_url" type="text" name="portrait_url" value={{author.portrait_url}}>
      </div>

      <button class="btn btn-primary add-book" type="submit">Update Author</button>
    </form>
  </div>
</div>
