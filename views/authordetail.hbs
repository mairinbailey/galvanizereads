<div class="row">
  <div class="col-md-offset-1 col-md-5 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/books">  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books</a>
  </div>
  <div class="col-md-6 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/authors"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Authors</a>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-2 col-md-2   col-xs-12">
    <img class="author-url" src="{{author.portrait_url}}" alt="portrait_url"/>
  </div>
    <div class="col-md-4">
      <h3>{{author.first_name}} {{author.last_name}}</h3>
      <h5>{{author.biography}}</h5>
      <a class="btn btn-default" href="/{{author.id}}/editauthor"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit</a>
      <a class="btn btn-default" href="/{{author.id}}/confirmDeleteAuthor"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Delete</a>
  </div>
</div>
