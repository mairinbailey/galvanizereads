<div class="row">
  <div class="col-md-offset-1 col-md-5 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/books">  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books</a>
  </div>
  <div class="col-md-6 col-xs-12">
    <a class="btn btn-primary btn-lg huge-button" href="/authors"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Authors</a>
  </div>
</div>
{{#each authors}}
<div class="row author-row">
  <div class="col-md-offset-2 col-md-2">
    <img class="author-url" src="{{this.portrait_url}}" alt="portrait_url"/>
  </div>
  <div class="col-md-4">
    <a href="/authors/{{this.author_id}}">{{this.first_name}} {{this.last_name}}</a>
    <p>{{this.biography}}</p>
      <a href="/authors/{{this.book_id}}">{{this.title}}</a>
      <br>
    <a class="btn btn-default" href="/{{this.author_id}}/editauthor"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit</a>
    <a class="btn btn-default" href="/{{this.author_id}}/deleteauthor"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Delete</a>
  </div>
</div>
{{/each}}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
      <a class="btn btn-primary add-book-button" href="/addAuthor">Add an Author</a>
    </div>
</div>
